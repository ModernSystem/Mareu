<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/filter_date_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/filter_dialog_title_date"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"/>

    <View

        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/filter_date_title"/>


    <EditText
        android:padding="10dp"
        android:inputType="date"
        android:id="@+id/from_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintLeft_toLeftOf="@id/to_time"
        android:hint="@string/meeting_date"
        android:clickable="true"
        android:focusable="false"/>

    <EditText
        android:padding="10dp"
        android:inputType="date"
        android:id="@+id/from_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/texview1"
        app:layout_constraintTop_toBottomOf="@id/from_date"
        android:hint="@string/meeting_time"
        android:clickable="true"
        android:focusable="false"/>

    <TextView
        android:id="@+id/texview1"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="From :"
        app:layout_constraintRight_toLeftOf="@id/to_time"
        app:layout_constraintTop_toTopOf="@id/from_date"
        app:layout_constraintBottom_toBottomOf="@id/from_time"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <View

        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/from_time"/>

    <EditText
        android:id="@+id/to_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/meeting_date"
        android:inputType="date"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="@id/to_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:clickable="true"
        android:focusable="false"/>

    <EditText
        android:padding="10dp"
        android:inputType="date"
        android:id="@+id/to_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_date"
        app:layout_constraintLeft_toRightOf="@id/textview2"
        android:hint="@string/meeting_time"
        android:clickable="true"
        android:focusable="false"/>

    <TextView
        android:id="@+id/textview2"
        android:textStyle="bold"
        android:textSize="@dimen/text_size"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="To :"
        app:layout_constraintRight_toLeftOf="@id/to_time"
        app:layout_constraintTop_toTopOf="@id/to_date"
        app:layout_constraintBottom_toBottomOf="@id/to_time"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/textbutton_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/to_time"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:text="Ok"
        android:clickable="true"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size"/>

    <TextView
        android:id="@+id/textbutton_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/textbutton_ok"
        app:layout_constraintBottom_toBottomOf="@id/textbutton_ok"
        app:layout_constraintRight_toLeftOf="@id/textbutton_ok"
        android:layout_marginEnd="100dp"
        android:text="Cancel"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size"/>


</androidx.constraintlayout.widget.ConstraintLayout>